@model IEnumerable<KB_Web.Models.CategoryViewModels>

@{
    ViewBag.Title = "ListofCategories";
}

<h3>List of Categories</h3>

<p>
    <input type="button" class="btn btn-success" value="Create new category" onclick="location.href='@Url.Action("CreateCategory", "Post")'" />
</p>

<p>

</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Number")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Badge)
        </th>
        <th>
            @Html.DisplayName("Count of Articles")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.Name).ToHtmlString(), "ListOfArticles", new { id = item.Id })
        </td>
        <td>
            @if (item.Badge != null)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Badge)" class="img-circle" width="32" height="32" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArticlesCount)
        </td>
    </tr>
    }

</table>
