@model IEnumerable<KB_Web.Models.CategoryViewModels>

@{
    ViewBag.Title = "ListofCategories";
}

<h2>List of Categories</h2>

<p>
    <input type="button" class="btn btn-success" value="Create new category" onclick="location.href='@Url.Action("CreateCategory", "Post")'" />
</p>

<p>

</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Badge)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Badge != null)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Badge)" class="img-circle" width="64" height="64"  />
                }
            </td>
        </tr>
    }

</table>
